                android:text="b4"
                android:layout_weight="1"
                android:id="@+id/b4" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="b5"
                android:layout_weight="1"
                android:id="@+id/b5" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="b6"
                android:layout_weight="1"
                android:id="@+id/b6" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="b7"
                android:layout_weight="1"
                android:id="@+id/b7" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c1"
                android:layout_weight="1"
                android:id="@+id/c1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c2"
                android:layout_weight="1"
                android:id="@+id/c2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c3"
                android:layout_weight="1"
                android:id="@+id/c3" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c4"
                android:layout_weight="1"
                android:id="@+id/c4" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c5"
                android:layout_weight="1"
                android:id="@+id/c5" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c6"
                android:layout_weight="1"
                android:id="@+id/c6" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c7"
                android:layout_weight="1"
                android:id="@+id/c7" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d1"
                android:layout_weight="1"
                android:id="@+id/d1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d2"
                android:layout_weight="1"
                android:id="@+id/d2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d3"
                android:layout_weight="1"
                android:id="@+id/d3" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d4"
                android:layout_weight="1"
                android:id="@+id/d4" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d5"
                android:layout_weight="1"
                android:id="@+id/d5" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d6"
                android:layout_weight="1"
                android:id="@+id/d6" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d7"
                android:layout_weight="1"
                android:id="@+id/d7" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="e1"
                android:layout_weight="1"
                android:id="@+id/e1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="e2"
                android:layout_weight="1"
                android:id="@+id/e2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="e3"
                android:layout_weight="1"
