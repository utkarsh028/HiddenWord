            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="e5"
                android:layout_weight="1"
                android:id="@+id/e5" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="e6"
                android:layout_weight="1"
                android:id="@+id/e6" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="e7"
                android:layout_weight="1"
                android:id="@+id/e7" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="f1"
                android:layout_weight="1"
                android:id="@+id/f1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="f2"
                android:layout_weight="1"
                android:id="@+id/f2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="f3"
                android:layout_weight="1"
                android:id="@+id/f3" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="f4"
                android:layout_weight="1"
                android:id="@+id/f4" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="f5"
                android:layout_weight="1"
                android:id="@+id/f5" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="f6"
                android:layout_weight="1"
                android:id="@+id/f6" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="f7"
                android:layout_weight="1"
                android:id="@+id/f7" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="g1"
                android:layout_weight="1"
                android:id="@+id/g1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="g2"
                android:layout_weight="1"
                android:id="@+id/g2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="g3"
                android:layout_weight="1"
                android:id="@+id/g3" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="g4"
                android:layout_weight="1"
                android:id="@+id/g4" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="g5"
                android:layout_weight="1"
                android:id="@+id/g5" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="g6"
                android:layout_weight="1"
                android:id="@+id/g6" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="g7"
                android:layout_weight="1"
                android:id="@+id/g7" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restart"
        android:layout_below="@+id/linear_layout_buttons"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TURN"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linear_layout_buttons"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:longClickable="false"
        android:layout_below="@+id/linear_layout_buttons"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/challenge"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:id="@+id/instructions_sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/button_restart">
        <Button
            android:id="@+id/inst"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@null"
            android:text="INSTRUCTIONS"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <ImageButton
            android:id="@+id/volume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:background="@null"
            android:src="@drawable/ic_volume_up_black_24dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/instructions_sound">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/prev"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:text=""/>
    </ScrollView>


</RelativeLayout>
